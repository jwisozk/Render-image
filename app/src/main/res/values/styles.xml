<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Wrapper -->
    <style name="wrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/wrapper_height</item>
        <item name="android:background">@drawable/wrapper</item>
    </style>

    <!-- CardView -->
    <style name="cardView">
        <item name="android:layout_width">@dimen/cardview_width</item>
        <item name="android:layout_height">@dimen/cardview_width</item>
        <item name="cardElevation">@dimen/cardview_elevation</item>
        <item name="cardCornerRadius">@dimen/cardview_corner_radius</item>
        <item name="cardBackgroundColor">@color/colorCardView</item>
    </style>

    <style name="ImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="checkBoxStyle">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/checkbox</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>